@model WebApplicationForSummerCamp.Models.EmailConfirm

@{
    ViewBag.Title = "Extend";
}

<h2>Extinde anuntul</h2>

<div style="max-width:600px">
    @using (Html.BeginForm("Extend", "Home", FormMethod.Post, new { role = "form" }))
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            @if (ViewBag.Result != null)
            {
                <div style="color:red">@ViewBag.Result</div>
            }
        </div>

       

        <div class="form-group">
            @Html.LabelFor(a => a.Email)
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
        </div>

       

        <input type="submit" value="Extend" class="btn btn-lg btn-info btn-block" />
    }
</div>

<center>@Html.ActionLink("Inapoi la anunturi", "Index", "Home")</center>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

